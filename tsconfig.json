{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs", 
        "jsx": "react", 
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "allowJs": true
    },
    "exclude": [
        "src/**/*.js", 
        "src/**/*.jsx"
    ],
    "include": [
        "./src/**/*.ts", 
        "./src/**/*.tsx",
        "declare.d.ts"
    ]
}
  